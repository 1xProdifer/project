generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  description String
  amount      Float
  type        String
  createdAt   DateTime @default(now())
}

model Goal {
  id        Int      @id @default(autoincrement())
  name      String
  amount    Float
  current   Float    @default(0)
  createdAt DateTime @default(now())
}

